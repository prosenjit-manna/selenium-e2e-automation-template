{
  "name": "selenium-e2e-automation-template",
  "version": "1.0.0",
  "description": "Selenium and Jest based E2E cross-browser testing template with Allure reporting",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:chrome": "BROWSER=chrome jest",
    "test:firefox": "BROWSER=firefox jest",
    "test:edge": "BROWSER=edge jest",
    "test:parallel": "jest --maxWorkers=4",
    "test:headless": "HEADLESS=true jest",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "clean:reports": "rm -rf allure-results allure-report screenshots"
  },
  "keywords": [
    "selenium",
    "jest",
    "e2e",
    "testing",
    "automation",
    "allure"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.11.1"
  },
  "dependencies": {
    "allure-jest": "^3.4.5",
    "selenium-webdriver": "^4.16.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/selenium-webdriver": "^4.1.21",
    "allure-commandline": "^2.25.0",
    "chromedriver": "^144.0.0",
    "dotenv": "^16.3.1",
    "geckodriver": "^4.3.1",
    "jest": "^29.7.0",
    "jest-allure": "^0.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "allure-jest/node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./config/jest.setup.js"
    ],
    "testTimeout": 60000,
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
